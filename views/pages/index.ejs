<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Track Taipei</title>
    <link href="/css/header.css" rel="stylesheet" type="text/css">
    <link href="/css/index.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="header">
      <div class="header-title">
        <img src="/images/logo.png">
      </div>
      <div class="header-info">
        <div class="header-music">
          <p>走音</p>
        </div>
        <div class="header-about">
          <p>關於我們</p>
        </div>
      </div>
    </div>
    
    <div class="image-content">  
      <img class="road-text-image" src="<%=data.roadPhoto%>">
      <img class="main-image" src="<%=data.mainPhoto%>">
    </div>

    <div class="container">
      <div class="functionailty-area">
        <button id="intro">簡介</button>
        <button id="track">音樂</button>
        <p><%=data.trackIntro%></p>
      </div>

      <div class="display-content">
        <div class="music-content">
            <iframe id="titleIFrame" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.titleIFrame%>"></iframe>        
        </div>
        
        <div class="intro-content">
            <p><%=data.titleIntro%></p>
        </div>
        
        <div class="map-content">
          <iframe
            id="google-iframe"
            align="center"
            height="450"
            frameborder="0" style="border:0"
            src="<%=data.googleMapSrc%>" allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>

    <div class="track-container">
      <div class="track-music-content">
        <!-- embeded music tool -->
        <iframe id="track-iframe1" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.trackIFrame1%>"></iframe>   
        <iframe id="track-iframe2" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.trackIFrame2%>"></iframe>
        <iframe id="track-iframe3" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.trackIFrame3%>"></iframe>
        <iframe id="track-iframe4" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.trackIFrame4%>"></iframe>
        <iframe id="track-iframe5" width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="<%=data.trackIFrame5%>"></iframe>
      </div>

      <div class="track-content">
        <img src="/images/track_photo.svg" />
        <div data-id="track-iframe1"  class="point1">
          <img src="/images/0131 sketch i8-16.png" />
        </div>

        <div data-id="track-iframe2" class="point2">
          <img src="/images/0131 sketch i8-15.png" />
        </div>
        
        <div data-id="track-iframe3" class="point3">
          <img src="/images/0131 sketch i8-11.png" />
        </div>
        
        <div data-id="track-iframe4" class="point4">
          <img src="/images/0131 sketch i8-14.png" />
        </div>
        
        <div data-id="track-iframe5" class="point5">
          <img src="/images/0131 sketch i8-13.png" />
        </div>
      </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/js/index.js"></script>
    <script src="/js/header.js"></script>
    <script src="http://w.soundcloud.com/player/api.js"></script>
  </body>
</html>
